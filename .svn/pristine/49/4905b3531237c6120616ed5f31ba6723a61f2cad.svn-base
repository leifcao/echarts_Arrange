let currentIndex = -1;

setInterval(function() {
    var dataLen = pieChirtFourOption.series[0].data.length;
    // 取消之前高亮的图形
    pieChirtFourth.dispatchAction({
        type: 'downplay',
        seriesIndex: 0,
        dataIndex: currentIndex
    });
    currentIndex = (currentIndex + 1) % dataLen;
    // 高亮当前图形
    pieChirtFourth.dispatchAction({
        type: 'highlight',
        seriesIndex: 0,
        dataIndex: currentIndex
    });
    // 显示 tooltip
    pieChirtFourth.dispatchAction({
        type: 'showTip',
        seriesIndex: 0,
        dataIndex: currentIndex
    });
}, 1000);